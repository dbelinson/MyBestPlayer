<?xml version="1.0" encoding="utf-8"?>

<resources>

	<declare-styleable name="com.admob.android.ads.AdView">
		<attr name="testing" format="boolean" />
		<attr name="backgroundColor" format="color" />
		<attr name="textColor" format="color" />
		<attr name="keywords" format="string" />
		<attr name="refreshInterval" format="integer" />
		<attr name="isGoneWithoutAd" format="boolean" />
	</declare-styleable>

	<!-- ScrollView style -->

	<style name="scroll_style">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- Main Activity Style -->

	<style name="main_layout">
		<item name="android:paddingTop">6dip</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_gravity">fill</item>
		<item name="android:gravity">fill</item>
	</style>

	<!-- Main Activity Sync Style -->

	<style name="bottom_simpity_logo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!--item name="android:scaleType">center</item-->
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:src">@drawable/simpity_logo2</item>
		<!--item name="android:src">@drawable/psa_back1</item-->
	</style>

	<style name="bottom_psa">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
	</style>

	<style name="adView_style">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="com.simpity.android.media:backgroundColor">#000000</item>
		<item name="com.simpity.android.media:textColor">#FFFFFF</item>
		<item name="com.simpity.android.media:keywords">Android Application</item>
		<item name="com.simpity.android.media:testing">true</item>
		<item name="com.simpity.android.media:isGoneWithoutAd">true</item>
		<item name="com.simpity.android.media:refreshInterval">30</item>
	</style>

	<style name="main_button_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="main_button_shape">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">60dip</item>
		<!--<item name="android:src">@drawable/main_button_shape</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		item name="android:focusableInTouchMode">true</item-->
	</style>

	<style name="main_button_linear_lh">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">8dip</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="main_button_icon">
		<item name="android:layout_width">40dip</item>
		<item name="android:layout_height">40dip</item>
		<item name="android:paddingLeft">5dip</item>

	</style>

	<style name="main_button_linear_lv">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">46dip</item>
		<item name="android:layout_weight">1.0</item>
	</style>

	<style name="main_button_title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">12dip</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<!--item name="android:textStyle">bold</item-->
		<item name="android:textColor">#000</item>
	</style>

	<style name="main_button_arrow">
		<item name="android:layout_width">30dip</item>
		<item name="android:layout_height">30dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Preferences Activity Style -->

	<style name="pref_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">6dip</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<style name="pref_title_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">2dip</item>
	</style>

	<style name="dialog_cancel_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">30dip</item>
		<item name="android:paddingRight">30dip</item>
		<item name="android:paddingTop">16dip</item>
		<item name="android:paddingBottom">16dip</item>
		<item name="android:text">@android:string/cancel</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="dialog_ok_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">40dip</item>
		<item name="android:paddingRight">40dip</item>
		<item name="android:paddingTop">16dip</item>
		<item name="android:paddingBottom">16dip</item>
		<item name="android:text">@android:string/ok</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="start_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:text">@string/start</item>
		<item name="android:paddingLeft">32dip</item>
		<item name="android:paddingRight">32dip</item>
		<item name="android:paddingTop">8dip</item>
		<item name="android:paddingBottom">8dip</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="start_button_container">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">8dip</item>
		<item name="android:paddingRight">8dip</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="media_player_control_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!--item name="android:paddingLeft">20dip</item>
		<item name="android:paddingRight">20dip</item-->
		<item name="android:padding">16dip</item>
	</style>

	<style name="help_header">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingTop">20dip</item>
		<item name="android:paddingLeft">10dip</item>
	</style>

	<style name="help_content_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">fill</item>

		<item name="android:textSize">16dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingLeft">10dip</item>
	</style>

	<style name="help_content_subitem_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingLeft">20dip</item>
		<item name="android:paddingTop">8dip</item>
	</style>

	<style name="help_content_image_layout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:padding">10dip</item>

	</style>

	<style name="header_port">
		<item name="android:textSize">19dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">3dip</item>
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal|bottom</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textColor">#C8C8C8</item>
	</style>

	<style name="header_port_small">
		<item name="android:textSize">15dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingRight">3dip</item>
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textColor">#C8C8C8</item>
	</style>

	<style name="content_port">
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">22dip</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="content_port_small">
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">15dip</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="header_land">
		<item name="android:textSize">19dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">3dip</item>
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textColor">#C8C8C8</item>
	</style>

	<style name="content_land">
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">21dip</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="updating_text_layout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:padding">2dip</item>
		<item name="android:visibility">invisible</item>
		<item name="android:background">#C0202020</item>
	</style>

	<style name="updating_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:text">@string/updating_links</item>
		<item name="android:textColor">#FFFFFFFF</item>
	</style>

</resources>
