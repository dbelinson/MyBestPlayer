<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

<!-- LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.simpity.android.media"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" -->

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="8dip"
		android:paddingBottom="8dip"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/phoneIPs"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:paddingRight="16dip"
			/>

		<ListView
			android:id="@+id/IPsLstView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:clickable="false"
			android:longClickable="false" />

	</LinearLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>

		<LinearLayout
			style="@style/bottom_psa"
			android:orientation="vertical"
			android:gravity="right|bottom"
			>

			<!-- com.admob.android.ads.AdView
				style="@style/adView_style"
				android:id="@+id/ad"
				app:backgroundColor="#000000"
				app:textColor="#FFFFFF"
				app:keywords="Android Application"
				app:testing="false"
				app:isGoneWithoutAd="false"
				app:refreshInterval="30"
				/-->
			
			<LinearLayout
		        android:id="@+id/AdLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/adView_style"
		        android:orientation="horizontal" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="8dip"
			android:paddingBottom="8dip"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/rtp_port"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:paddingRight="16dip"
				/>

			<EditText
				android:id="@+id/mjpeg_port_editor"
				android:layout_marginLeft="16dip"
				android:maxLength="5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

		</LinearLayout>


		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="8dip"
			android:paddingRight="8dip"
			android:gravity="right">

			<Button
				android:id="@+id/mjpeg_start_button"
				style="@style/start_button" />

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
