<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widgetContainer"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_margin="8dip"
	android:background="@drawable/player_widget_background"
	>

	<ImageButton
		android:id="@+id/WidgetPlayerPlay"
		style="@style/media_player_control_button"
		android:src="@drawable/play"
		android:layout_centerVertical="true"
		/>

	<LinearLayout
		android:id="@+id/WidgetPlayerNextLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/WidgetPlayerNext"
			style="@style/media_player_control_button"
			android:src="@drawable/forward"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/WidgetRadioInfo"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_toRightOf="@id/WidgetPlayerPlay"
		android:layout_toLeftOf="@id/WidgetPlayerNextLayout"
		android:gravity="center_horizontal|center_vertical"
		android:clickable="true"
		>

		<TextView
			android:id="@+id/WidgetRadioStation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Station"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:singleLine="true"
			/>

		<TextView
			android:id="@+id/WidgetRadioTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Title"
			android:textColor="#FFFFFF"
			android:singleLine="true"
			/>

	</LinearLayout>

</RelativeLayout>
